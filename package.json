{
  "name": "movie-monkey",
  "productName": "Movie Monkey",
  "version": "0.2.0",
  "description": "A clean and simple, open source movie manager.",
  "email": "<chimp@getmoviemonkey.com>",
  "author": {
    "name": "Shrihari",
    "email": "iamshrihari@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shrihari/moviemonkey.git"
  },
  "license": "CC0-1.0",
  "homepage": "http://getmoviemonkey.com/",
  "scripts": {
    "watch": "webpack --watch",
    "start": "electron ./app --enable-logging",
    "dev": "NODE_ENV='development' npm run start",
    "dist": "build -mwl --x64 --ia32",
    "dist:linux":"build --linux",
    "release": "build --mac -p always"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^6.2.7",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "electron": "^1.6.8",
    "electron-builder": "^18.0.0",
    "json-loader": "^0.5.4",
    "webpack": "^1.15.0",
    "xml2js": "^0.4.0"
  },
  "dependencies": {
    "electron-analytics": "^0.1.2",
    "electron-updater": "^1.4.2",
    "episode-parser": "^1.2.0",
    "filewalker": "^0.1.3",
    "forEachAsync": "^3.0.0",
    "image-downloader": "^2.0.3",
    "mkdirp": "^0.5.1",
    "nedb": "^1.8.0",
    "omdb-client": "^2.0.0",
    "omdbapi": "^2.0.1",
    "opensubtitles-api": "^3.5.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "tmdbapi": "^1.0.2"
  },
  "build": {
    "appId": "com.moviemonkey",
    "files": [
      "**/*",
      "!node_modules${/*}"
    ],
    "mac": {
      "category": "public.app-category.entertainment",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "linux": {
      "category": "AudioVideo",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "shrihari",
        "repo": "moviemonkey"
      }
    ]
  }
}
